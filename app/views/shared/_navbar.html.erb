<div class="navbar navbar-expand-sm navbar-light main-navbar">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "/", class: "nav-link" %>
      </li>
      <li>
        <%= link_to "Users", "/users", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "man.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Profile", current_user, class: "dropdown-item" %>
          <%= link_to "Edit my profile", "/users/edit", class: "dropdown-item" %>
          <%= link_to "Logout", "/users/sign_out", class: "dropdown-item", method: :delete %>
        </div>
      </li>
    </ul>
  </div>
</div>

