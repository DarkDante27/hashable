<!-- This is the home feed -->
<% if @feed_items.any? %>
  <ol class="miniposts">
    <%= render @feed_items %>
  </ol>
  <%= will_paginate @feed_items, list_classes: %w(pagination justify-content-center) %>
<% else %>
  <h2 class="no-posts">:'( No posts</h2>
  <div class="d-flex justify-content-center">
    <%= image_tag "https://res.cloudinary.com/dduochwyb/image/upload/v1565423483/HASHABLE/Sad-Twitter-Bird_sovudb.png", alt: "sad_bird", id: "no-posts-bird" %>
  </div>
<% end %>

