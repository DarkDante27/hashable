<%= image_tag "https://res.cloudinary.com/dduochwyb/image/upload/v1565147994/HASHABLE/new-york-bridge-building-landscape-beautiful-free-stock-photos-images-hd-wallpaper_by0luw.jpg", alt: "background", class: 'login-bg', style: 'background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))' %>

<div class="container login-form">
  <%= link_to image_tag("https://res.cloudinary.com/dduochwyb/image/upload/v1565078822/HASHABLE/logo-via-logohub_gvei8o.png", alt: "logo", id: 'login-logo'), '/' %>

  <h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-warning login-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
