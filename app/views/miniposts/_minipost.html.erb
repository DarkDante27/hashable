<li id="minipost-<%= minipost.id %>">
  <span class="user"><%= link_to minipost.user.username, minipost.user %></span>
  <span class="content"><%= minipost.content %></span>
  <%= cl_image_tag minipost.picture.url if minipost.picture? %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(minipost.created_at) %> ago.
    <% if current_user.id == minipost.user.id %>
      <%= link_to "delete", minipost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
