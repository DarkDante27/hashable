<% if user_signed_in? %>
  <%= render 'shared/navbar' %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="minipost_form">
      <%= render 'shared/minipost_form' %>
    </section>
  </aside>
</div>
<div class="col-md-8">
  <h3>Minipost Feed</h3>
  <%= render 'shared/feed' %>
</div>
<% else %>
  <%= render 'shared/landing_page' %>
<% end %>




